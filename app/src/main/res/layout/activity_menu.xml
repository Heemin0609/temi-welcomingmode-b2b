<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageButton
        android:id="@+id/backbutton_menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1090dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintBottom_toTopOf="@+id/rootlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/menu_tV"
        android:layout_width="418dp"
        android:layout_height="78dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="772dp"
        android:layout_marginBottom="640dp"
        android:text="ㅎㅎ"
        android:textSize="60sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/rootlayout"
        android:layout_width="1100dp"
        android:layout_height="555dp"
        android:layout_marginBottom="87dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/menu_oil"
            android:layout_width="1100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="오일 파스타"
            android:textSize="30sp" />

        <Button
            android:id="@+id/menu_shrimp"
            android:layout_width="1100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="쉬림프 파스타"
            android:textSize="30sp" />

        <Button
            android:id="@+id/menu_fomodoro"
            android:layout_width="1100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="포모도로 파스타"
            android:textSize="30sp" />

        <Button
            android:id="@+id/menu_rose"
            android:layout_width="1100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="로제 파스타"
            android:textSize="30sp" />

        <Button
            android:id="@+id/menu_ggar"
            android:layout_width="1100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:text="까르보나라 파스타"
            android:textSize="30sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
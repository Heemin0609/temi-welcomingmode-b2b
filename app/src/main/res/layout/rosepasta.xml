<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backbutton_rose"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="625dp"
        android:layout_height="500dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/loze" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="1100dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:text="로제 파스타"
        android:textSize="80sp"
        app:layout_constraintEnd_toStartOf="@+id/backbutton_rose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="625dp"
        android:layout_height="500dp"
        android:layout_marginBottom="84dp"
        android:text="토마토 소스와 생크림을 베이스로 만든 파스타  가격 : 9000원"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEn="28dp"
        android:hint="수량을 입력해주세요"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/orderbutton" />

    <Button
        android:id="@+id/orderbutton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="주문하가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/endbutton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="종료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>